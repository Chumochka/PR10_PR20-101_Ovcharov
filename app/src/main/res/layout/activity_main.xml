<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8C091"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <Button
        android:layout_width="376dp"
        android:layout_height="90dp"
        android:layout_marginTop="73dp"
        android:layout_marginLeft="17dp"
        android:textColor="@color/black"
        android:backgroundTint="#FFE7AB"
        android:drawableLeft="@drawable/vectorsdf"
        android:fontFamily="@font/roboto"
        android:text="моё смарт-устройство"
        android:textAllCaps="false"
        android:textFontWeight="400"
        android:textSize="22dp"
        android:clickable="false"/>
    <Button
        android:layout_width="376dp"
        android:layout_height="76dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="16dp"
        android:height="76dp"
        android:backgroundTint="#E5E5E5"
        android:drawableLeft="@drawable/vector"
        android:fontFamily="@font/roboto"
        android:text="1,3km"
        android:textAlignment="viewEnd"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textFontWeight="400"
        android:textSize="24dp"
        android:clickable="false"/>
    <Button
        android:layout_width="376dp"
        android:layout_height="76dp"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="18dp"
        android:backgroundTint="#E5E5E5"
        android:drawableLeft="@drawable/vectoraf"
        android:fontFamily="@font/roboto"
        android:text="59 kcal"
        android:textAlignment="viewEnd"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textFontWeight="400"
        android:textSize="24dp"
        android:clickable="false"/>
    <Button
        android:layout_width="376dp"
        android:layout_height="76dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#E5E5E5"
        android:drawableLeft="@drawable/time"
        android:fontFamily="@font/roboto"
        android:text="30 min"
        android:textAlignment="viewEnd"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textFontWeight="400"
        android:textSize="24dp"
        android:clickable="false"/>
    <Button
        android:layout_width="376dp"
        android:layout_height="76dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="13dp"
        android:backgroundTint="#E5E5E5"
        android:drawableLeft="@drawable/refresh"
        android:fontFamily="@font/roboto"
        android:text="1583 steps"
        android:textAlignment="viewEnd"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textFontWeight="400"
        android:textSize="24dp"
        android:clickable="true"/>
    <LinearLayout
        android:layout_width="376dp"
        android:layout_height="157dp"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="17dp">
        <Button
            android:layout_width="178dp"
            android:layout_height="match_parent"
            android:backgroundTint="#E5E5E5"
            android:drawableLeft="@drawable/wifi"
            android:drawableBottom="@drawable/graph1"
            android:fontFamily="@font/roboto"
            android:text="62 kg"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:textSize="18dp"
            android:clickable="false"/>
        <Button
            android:layout_width="178dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:backgroundTint="#E5E5E5"
            android:drawableLeft="@drawable/health"
            android:drawableBottom="@drawable/graph2"
            android:fontFamily="@font/roboto"
            android:text="62 kg"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:textSize="18dp"
            android:clickable="false"/>
    </LinearLayout>
</LinearLayout>